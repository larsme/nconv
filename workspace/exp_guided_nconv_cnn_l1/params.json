{
    "exp_name": "exp_guided_nconv_cnn_l1",
    "trainer": "KittiDepthTrainer",
    "use_gpu": true,
    "gpu_id": 0,
    "invert_depth": false,
    "data_normalize_factor": 256,
	"kitti_depth_dataset_dir": "../../data/kitti_depth",
	"kitti_rgb_dataset_dir": "../../data/kitti_raw",
    "load_rgb":true,
    "train_on": "full",
    "train_batch_sz": 4,
    "val_batch_sz": 1,
    "test_batch_sz": 1,
    "loss": "SmoothL1Loss",
    "optimizer": "Adam",
    "lr": 0.0001,
    "weight_decay": 0,
    "lr_decay": 0.1,
    "lr_decay_step": 20,
    "enforce_pos_weights": "None",
    "num_epochs": 30,
    "save_chkpt_each": 1,
    "save_out_imgs": false,
    "notes_to_self": "Guided depth completion network trained on Depth using the SmoothL1Loss"
}
